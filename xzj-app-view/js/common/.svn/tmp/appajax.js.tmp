
// 初始化ajax配置
$.ajaxSetup({
　　　　timeout: 30000,
　　　　//请求之前触发
	　　beforeSend: function (xhr) {
			var flag=m_login.checkTokenExpired();
			//每次请求会带一个token过去
			if(this.data == undefined||""==this.data){
				if(this.url.indexOf("?") >= 0){
					this.url=this.url+"&token="+m_login.getToken();
				}else{
					this.url=this.url+"?token="+m_login.getToken();
				}
			}else{
				this.data="token="+m_login.getToken()+"&"+this.data;
			}
		},
		dataType:"json",
		cache:false, 
　　　　 	complete: function (XHR, TS) {
			//判断token是否无效 如果无效 跳转登录页面(此步骤 一般不会触发 除非服务端token 删除才会)
			var str= XHR.responseText;
		    var dataJson = eval('(' + str + ')');
			if(dataJson.code=='10002'&&const_is_error_login==0){
				const_is_error_login=1;//防止重复弹出 alert框
				setTimeout(function(){
						mui.alert('登录异常', function() {
							m_login.toLogin();
						})},
				1000);
			}
		}
　　}
);
